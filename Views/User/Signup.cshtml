@model ChatMvc.Models.User;

<h1>회원가입</h1>

<form class="form-horizontal" method="post" asp-controller="User" asp-action="Signup">
    <div class="form-group">
        <input type="text" class="form-control" asp-for="Name" placeholder="이름" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <input type="password" class="form-control" asp-for="Pwd" placeholder="비밀번호" /><br />
        <span class="text-danger" asp-validation-for="Pwd"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">회원가입</button>
        <button type="reset" class="btn btn-warning" href="../Home/Index.cshtml">취소</button>
    </div>
</form>